{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["app/_5_shared/*"],
      "@entities/*": ["app/_4_entities/*"],
      "@features/*": ["app/_3_features/*"],
      "@widgets/*": ["app/_2_widgets/*"],
      "@pages/*": ["app/_1_pages/*"],
      "@lib/*": ["app/_6_lib/*"]
    },
    "baseUrl": "./"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/[locale]/(landing)/parent/@modal/default.tsx",
    "next-i18next.config.js",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
